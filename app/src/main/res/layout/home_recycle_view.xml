<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/drink_image_recycle"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:src="@drawable/ic_baseline_home_24"
        app:civ_border_width="1dp"
        android:padding="10dp"

        app:civ_border_color="#FF000000"/>

    <TextView
        android:id="@+id/glass_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DRINK GLASS"
        android:layout_toEndOf="@id/drink_image_recycle"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/drink_detail"
        android:layout_width="match_parent"
        android:layout_toStartOf="@id/add_fav_btn"
        android:paddingEnd="5dp"
        android:layout_height="wrap_content"
        android:text="DRINK GLASS"
        android:maxLines="1"
android:ellipsize="end"
        android:layout_toEndOf="@id/drink_image_recycle"
        android:layout_below="@id/glass_name"
        android:layout_marginTop="5dp"
        android:textColor="@android:color/darker_gray"
        />

    <CheckBox
        android:id="@+id/checkbox_v"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:clickable="false"
        />

    <ImageView
        android:id="@+id/add_fav_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_blank_star"
        android:layout_toStartOf="@id/checkbox_v"
        android:layout_centerInParent="true"
        android:layout_marginEnd="3dp"
        app:tint="@android:color/holo_orange_light" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/darker_gray"
        android:layout_marginEnd="35dp"
        android:layout_marginStart="35dp"
        android:layout_marginBottom="4dp"
        />

</RelativeLayout>